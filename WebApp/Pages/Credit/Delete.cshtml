@page
@model WebApp.Pages.Credit.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logic.Created)
        </dt>
        <dd class="col-sm-10">
            @Model.Logic.Created
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logic.Value)
        </dt>
        <dd class="col-sm-10">
            @Model.Logic.Value
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logic.Success)
        </dt>
        <dd class="col-sm-10">
            @Model.Logic.Success
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Logic.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-page="./Index">Cancel</a>
    </form>
</div>